<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.spector_matveev493.SpectraView
        android:id="@+id/spectraView"
        android:layout_width="407dp"
        android:layout_height="98dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPlus"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="zoomIn"
            android:text="+" />

        <Button
            android:id="@+id/buttonMinus"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="zoomOut"
            android:text="-" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="321dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSetting"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="ApplicationSettings"
            android:text="Application setting" />

        <Button
            android:id="@+id/buttonSetting2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="DisplaySettings"
            android:text="Display setting" />
    </LinearLayout>


</LinearLayout>